		"unplugin-auto-import": "^0.17",
		"typescript": "^5.4",
		"@types/node": "^20.12",
		"path": "^0.12",
		"vitest": "^1.4",
		"@vue/test-utils": "^2.4",
		"@types/jsdom": "^21.1",
		"@babel/types": "^7.24",
		"jsdom": "^24.0",
		"eslint": "^8.57",
		"eslint-plugin-vue": "^9.24",
		"eslint-plugin-import": "^2.29",
		"eslint-plugin-prefer-arrow": "^1.2",
		"@typescript-eslint/parser": "^7.5",
		"@typescript-eslint/eslint-plugin": "^7.5",
		"@vue/eslint-config-typescript": "^13.0",
		"element-plus": "^2.6"
	},
